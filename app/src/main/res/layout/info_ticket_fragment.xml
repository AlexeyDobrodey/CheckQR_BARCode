<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size"
            android:text="НОМЕР" />

        <TextView
            android:id="@+id/id_ticket_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/time_txt_color"
            android:textSize="@dimen/txt_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="AA521134"  />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_size"
                android:textStyle="bold"
                android:text="Представление:" />

            <TextView
                android:id="@+id/name_represent_txt_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/time_txt_color"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size"
                android:text="Золушка и туфелька ночная" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_size"
                android:textStyle="bold"
                android:text="ФИО:" />

            <TextView
                android:id="@+id/fio_txt_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/time_txt_color"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size"
                android:text="Петренко Евгений Олегович" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size"
                android:text="РЯД" />

            <TextView
                android:id="@+id/row_place_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/time_txt_color"
                android:textSize="@dimen/txt_size"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="5" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size"
                android:text="МЕСТО" />

            <TextView
                android:id="@+id/num_place_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/time_txt_color"
                android:textSize="@dimen/txt_size"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="5" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn_check_ticket"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Подтвердить" />


</LinearLayout>